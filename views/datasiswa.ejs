<div class="flex mb-5">
	<form class="w-full flex space-x-4" action="">
		<div>
			<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Cari Siswa"
				class="w-full px-3 py-1 placeholder-gray-400 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
		</div>

		<div class="h-8 flex space-x-2 items-center">
			<label for="category" class="text-gray-700">Cari Bedasarkan:</label>
			<select id="category" name="category" class="border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
				<option value="nama">Nama</option>
				<option value="nisn">NISN</option>
			</select>
		</div>

		<button type="submit" class="py-1 px-2 w-14 bg-blue-400 text-sm text-white rounded-md flex justify-center items-center">Cari</button>
	</form>

	<a href="datasiswa/tambah" class="py-1 px-2 w-28 bg-blue-400 text-sm text-white rounded-md flex justify-center items-center">Tambah Data</a>
</div>
<!-- Tabel Siswa -->
<div class="container mx-auto">
	<div class="overflow-x-auto">
		<table class="min-w-full bg-white">
			<thead>
				<tr>
					<th class="w-1/5 px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama Siswa</th>
					<th class="w-1/5 px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">NISN</th>
					<th class="w-1/5 px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tempat Lahir</th>
					<th class="w-1/5 px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jenis Kelamin</th>
					<th class="w-1/5 px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kelas</th>
				</tr>
			</thead>
			<tbody class="divide-y divide-gray-300">
				<% siswa.forEach(siswa => { %>
				<tr>
					<td class="px-4 py-2 whitespace-nowrap"><%= siswa.nama %></td>
					<td class="px-4 py-2 whitespace-nowrap"><%= siswa.nisn %></td>
					<td class="px-4 py-2 whitespace-nowrap"><%= siswa.tempatLahir %></td>
					<td class="px-4 py-2 whitespace-nowrap"><%= siswa.jenisKelamin %></td>
					<td class="px-4 py-2 whitespace-nowrap"><%= siswa.kelas %></td>
					<td class="px-4 py-2 whitespace-nowrap">
						<a href="/datasiswa/<%= siswa.nisn %>" class="py-1 px-1 w-14 bg-blue-400 text-xs text-white rounded-md flex justify-center items-center">detail</a>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>


