<div>
    <a href="/datasiswa" class="p-1 w-24 mb-4 bg-blue-400 text-sm text-white rounded-md flex justify-center items-center"><- Kembali</a>
</div>

<div class="w-full p-5 border shadow-sm">
    <form action="/datasiswa/tambah" method="POST">
 
        <div class="grid grid-cols-2 gap-2"> 

            <div class="flex justify-between">
                <label for="nama">Nama Siswa:</label>
                <input required type="text" id="nama" name="nama"
                    class="px-1 h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>

            <div class="flex justify-between">
                <label for="nisn">NISN:</label>
                <input required type="number" id="nisn" name="nisn"
                    class="px-1 h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>

            <div class="flex justify-between">
                <label for="tanggalLahir">Tanggal Lahir:</label>
                <input required type="date" id="tanggalLahir" name="tanggalLahir"
                    class="px-1 h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>

            <div class="flex justify-between">
                <label for="tempatLahir">Tempat Lahir:</label>
                <input required type="text" id="tempatLahir" name="tempatLahir"
                    class="px-1 h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>

            <div class="flex justify-between items-center h-8">
                <label for="jenisKelamin">Jenis Kelamin:</label>
                <select id="jenisKelamin" name="jenisKelamin" 
                    class="h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                    <option value="Laki-Laki">Laki-Laki</option>
                    <option value="Perempuan">Perempuan</option>
                </select>
            </div>

            <div class="flex justify-between items-center h-8">
                <label for="kelas" class="mr-4">Kelas:</label>
                <select id="kelas" name="kelas" 
                    class="h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                    <option value="X">X</option>
                    <option value="XI">XI</option>
                    <option value="XII">XII</option>
                </select>
              </div>

            <div class="flex justify-between">
                <label for="noHP">Nomor HP:</label>
                <input type="number" id="noHP" name="noHP"
                    class="px-1 h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>

            <div class="flex justify-between">
                <label for="email">Alamat Email:</label>
                <input type="email" id="email" name="email"
                    class="px-1 h-6 w-48 border border-gray-300 rounded-sm shadow-sm focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>
            
            <button type="submit" class="py-1 px-2 w-20 bg-blue-400 text-sm text-white rounded-md flex justify-center items-center">Submit</button>

        </div>

    </form>
</div>